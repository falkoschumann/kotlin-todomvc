<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<VBox prefHeight="600.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox fx:id="header" alignment="CENTER" spacing="10.0">
         <children>
            <Label text="todos">
               <font>
                  <Font size="42.0" />
               </font>
            </Label>
            <TextField promptText="What needs to be done?" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
      <VBox fx:id="main" spacing="6.0" VBox.vgrow="ALWAYS">
         <children>
            <CheckBox mnemonicParsing="false" text="Mark all as complete">
               <VBox.margin>
                  <Insets left="6.0" />
               </VBox.margin>
            </CheckBox>
            <ListView prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS" />
         </children>
      </VBox>
      <HBox alignment="CENTER">
         <children>
            <Label text="0 item left" />
            <HBox alignment="CENTER" spacing="6.0" HBox.hgrow="ALWAYS">
               <children>
                  <RadioButton mnemonicParsing="false" selected="true" text="All">
                     <toggleGroup>
                        <ToggleGroup fx:id="filters" />
                     </toggleGroup>
                  </RadioButton>
                  <RadioButton mnemonicParsing="false" text="Active" toggleGroup="$filters" />
                  <RadioButton mnemonicParsing="false" text="Completed" toggleGroup="$filters" />
               </children>
            </HBox>
            <Button mnemonicParsing="false" text="Clear completed" />
         </children>
         <padding>
            <Insets bottom="6.0" left="6.0" right="6.0" top="6.0" />
         </padding>
      </HBox>
   </children>
</VBox>
